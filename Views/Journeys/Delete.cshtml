@model TrainReservation.Models.Journey

@{
    ViewData["Title"] = "Delete a Journey";
}

<div class="mb-4 mt-4">
    <h2>Are you sure you want to cancel this journey?</h2>
    <i class="fas fa-route"></i> <a asp-action="Index">Journeys</a>
</div>

<div class="row">
    <div class="col-md-5">

        <div class="card">
            <div class="card-body">
                
                <h3>@Model.Departure - @Model.Destination</h3>
                <p><i class="fas fa-train"></i> @Model.Train.Name</p>

                <p>The journey is canceled for operetional reasons. All passengers will be refunded.</p>

                <hr>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="JourneyID" />
                    
                    <input type="submit" value="Cancel" class="btn btn-sm btn-danger mt-3" />
                </form>
            </div>
        </div>

    </div> <!-- </col> -->
</div> <!-- </row> -->
@page
@model LoginModel

@{
    ViewData["Title"] = "TravelWind - Log in";
}

<div class="row">
    <div class="col-md-5 mt-4">

        <section class="card">
            <div class="card-body">

                <form method="post">
                    <h4>Use a local account to log in.</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" placeholder="Ex. email@aubg.edu"/>
                        <span asp-validation-for="Input.Email" class="badge badge-danger mt-3"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" placeholder="*********" />
                        <span asp-validation-for="Input.Password" class="badge badge-danger mt-3"></span>
                    </div>

                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-dark">Log in</button>
                    </div>
                    <div class="form-group mb-0">
                        <p>
                            <a asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <hr>
                        <a class="btn btn-sm btn-light" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                            <i class="fas fa-users mr-1"></i> Register as a new user
                        </a>
                    </div>
                </form>

            </div> <!-- </card-body> -->
        </section>

    </div> <!-- </col> -->
</div> <!-- </row> -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

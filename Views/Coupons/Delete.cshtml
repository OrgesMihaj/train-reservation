@model TrainReservation.Models.Coupon

@{
    ViewData["Title"] = "Delete a Coupon";
}

<div class="mb-4 mt-4">
    <h2>Are you sure you want to delete @Html.DisplayFor(model => model.Name)?</h2>
    <i class="fas fa-ticket-alt"></i> <a asp-action="Index">List of available coupons</a>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="CouponID" />
    <input type="submit" value="Delete" class="btn btn-danger" /> 
</form>

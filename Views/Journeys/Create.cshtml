@model TrainReservation.Models.Journey

@{
    ViewData["Title"] = "Add a new Journey";
}

<div class="mb-4 mt-4">
    <h2>Add a new Journey</h2>
    <i class="fas fa-route"></i> <a asp-action="Index">Journeys</a>
</div>

<div class="row">
    <div class="col-md-5">

        <div class="card">
            <div class="card-body">

                <form asp-action="Create">
                    @{ var currentDateTime = @DateTime.Now.ToString("yyyy-MM-ddTHH:mm"); }

                    <div asp-validation-summary="ModelOnly" class="badge badge-danger mt-2"></div>
                    <div class="form-group">
                        <label asp-for="Departure" class="control-label"></label>
                        <input asp-for="Departure" class="form-control" placeholder="Ex. Sofia" />
                        <span asp-validation-for="Departure" class="badge badge-danger mt-2"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Destination" class="control-label">Destination</label>
                        <input asp-for="Destination" class="form-control" placeholder="Ex. Blagoevgrad" />
                        <span asp-validation-for="Destination" class="badge badge-danger mt-2"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="DepartureTime" class="control-label">Departure Time</label>
                        <input asp-for="DepartureTime" class="form-control" 
                               value="@currentDateTime" min="@currentDateTime" />

                        <span asp-validation-for="DepartureTime" class="badge badge-danger mt-2"></span>
                        
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="ArrivalTime" class="control-label">Arrival Time</label>
                        <input asp-for="ArrivalTime" class="form-control" 
                               value="@currentDateTime" min="@currentDateTime" />

                        <span asp-validation-for="ArrivalTime" class="badge badge-danger mt-2"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">$</span>
                            </div>
                            <input asp-for="Price" class="form-control" placeholder="Ex. 20.00" />
                        </div>
                        
                        <span asp-validation-for="Price" class="badge badge-danger mt-2"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="TrainID" class="control-label">Train</label>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-train"></i></span>
                            </div>
                            <select asp-for="TrainID" class ="form-control" asp-items="ViewBag.Trains">
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input class="mr-2" asp-for="AllowSeatReservation" />
                                Allow users to select seats
                            </label>
                        </div>
                    </div>

                    <div class="form-group mb-0">
                        <input type="submit" value="Create" class="btn btn-sm btn-dark" />
                    </div>
                </form> 

            </div>
        </div> <!-- </card> -->

    </div> <!-- </col> -->
</div> <!-- </row> -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

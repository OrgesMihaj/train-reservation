@model TrainReservation.Models.Train

@{
    ViewData["Title"] = "Add a new Train";
}

<div class="mb-4 mt-4">
    <h2>Add a new Train</h2>
    <i class="fas fa-train"></i> <a asp-action="Index">Trains Inventory</a>
</div>

<div class="row">
    <div class="col-md-5">

        <div class="card">
            <div class="card-body">

                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Train name</label>
                        <input asp-for="Name" class="form-control" placeholder="Ex. Eagle Speed" />
                        <span asp-validation-for="Name" class="badge badge-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Capacity" class="control-label">Capacity</label>
                        
                        <select class="form-control" asp-for="Capacity">
                            <option>Select train capacity</option>
                            <option value="32">32</option>
                            <option value="64">64</option>
                            <option value="128">128</option>
                        </select>

                        <span asp-validation-for="Capacity" class="badge badge-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="form-check">
                            <input asp-for="Express" class="form-check-input" type="checkbox">                
                            <label class="form-check-label" asp-for="Express">
                                Express Train
                            </label>
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-sm btn-dark" />
                    </div>
                </form>

            </div>
        </div> <!-- </card> -->

    </div> <!-- </col> -->
</div> <!-- </row> -->

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

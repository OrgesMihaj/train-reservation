@model IEnumerable<TrainReservation.Models.Train>

@{
    ViewData["Title"] = "Trains Inventory";
}

<div class="mb-4 mt-4">
    <h2><i class="fas fa-train"></i> @ViewData["Title"]</h2>
    <a class="btn btn-sm btn-dark mt-2" asp-action="Create">Add a new Train</a>
</div>

<table class="table">
    <thead class="table__head">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Express)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model) {
        <tr class="align-items-center">
            <td>
                @item.Name
            </td>
            <td class="text-center">
                @{
                    var ExpressClassName = (item.Express) ? "badge badge-success" : "badge badge-danger";
                    var ExpressStatus = (item.Express) ? "Yes" : "No";
                }
                <span class="@ExpressClassName"> @ExpressStatus </span>
            </td>
            <td>
                <a class="btn btn-light btn-sm" asp-action="Edit" asp-route-id="@item.TrainID">Edit</a>
                <a class="btn btn-light btn-sm" asp-action="Delete" asp-route-id="@item.TrainID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@model TrainReservation.Models.Coupon

@{
    ViewData["Title"] = "Edit";
}

<div class="mb-4 mt-4">
    <h2>Edit an existing Coupon</h2>
    <i class="fas fa-ticket-alt"></i> <a asp-action="Index">List of available coupons</a>
</div>




<div class="row">
    <div class="col-md-5">

        <div class="card">
            <div class="card-body">

                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Eg. Thanksgiving" />
                        <span asp-validation-for="Name" class="badge badge-danger"></span>
                    </div>

                    <div class="form-group">

                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" placeholder="Eg. Save room for that giant Thanksgiving trip."/>
                        <span asp-validation-for="Description" class="badge badge-danger"></span>

                    </div>

                    <div class="form-group">
                        
                        <label class="control-label">Discount</label>

                        <div class="row no-gutters">

                            <div class="col-5">
                                
                                <!-- Percentage Discount -->
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">$</span>
                                    </div>

                                    <input asp-for="Amount" placeholder="Eg. $4" class="form-control" />
                                    
                                </div>

                            </div>

                            <div class="col-7">

                                <!-- Dollar Discount -->
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span style="border-radius: 0;" class="input-group-text" id="basic-addon1"><strong>and / or</strong></span>
                                    </div>

                                    <input style="border-radius: 0;" placeholder="Eg. 5.5%" asp-for="Percentage" class="form-control" />

                                    <div class="input-group-append">
                                        <span class="input-group-text">%</span>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <span asp-validation-for="Percentage" class="badge badge-danger"></span>
                        <span asp-validation-for="Amount" class="badge badge-danger"></span>
                        
                    </div>

                    <input type="hidden" asp-for="CouponID" />
                    <input type="hidden" asp-for="Code" />

                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-sm btn-dark" />
                    </div>
                </form>

            </div> <!-- </card-body> -->
        </div> <!-- </card> -->

    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

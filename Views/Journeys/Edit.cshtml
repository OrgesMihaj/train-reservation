@model TrainReservation.Models.Journey

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Journey</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="JourneyID" />
            <div class="form-group">
                <label asp-for="DepartsFrom" class="control-label"></label>
                <input asp-for="DepartsFrom" class="form-control" />
                <span asp-validation-for="DepartsFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Destination" class="control-label"></label>
                <input asp-for="Destination" class="form-control" />
                <span asp-validation-for="Destination" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartsAt" class="control-label"></label>
                <input asp-for="DepartsAt" class="form-control" />
                <span asp-validation-for="DepartsAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArrivesAt" class="control-label"></label>
                <input asp-for="ArrivesAt" class="form-control" />
                <span asp-validation-for="ArrivesAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrainID" class="control-label"></label>
                <select asp-for="TrainID" class="form-control" asp-items="ViewBag.TrainID"></select>
                <span asp-validation-for="TrainID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


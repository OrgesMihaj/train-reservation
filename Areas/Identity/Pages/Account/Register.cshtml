@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="row">
    <div class="col-md-5 mt-4">
        
        <section class="card">
            <div class="card-body">

                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    
                    <h4>Explore the world.</h4>
                    <p>Create your account now.</p>
                    <hr />

                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" placeholder="Ex. email@aubg.edu" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" placeholder="*************" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="*************" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-dark">Register</button>

                    <div class="form-group mb-0">   
                        <hr>
                        <a class="btn btn-sm btn-light" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">
                            <i class="fas fa-sign-in-alt"></i> Login
                        </a>
                    </div>
                </form>

            </div> <!-- </card-body> -->
        </section> <!-- </card> -->

    </div> <!-- </col> -->
</div> <!-- </row> -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

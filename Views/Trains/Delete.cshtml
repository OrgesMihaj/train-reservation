@model TrainReservation.Models.Train

@{
    ViewData["Title"] = "Delete a Train";
}

<div class="mb-4 mt-4">
    <h2>Are you sure you want to delete @Html.DisplayFor(model => model.Name)?</h2>
    <i class="fas fa-train"></i> <a asp-action="Index">Trains Inventory</a>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="TrainID" />
    <input type="submit" value="Delete" class="btn btn-danger" /> 
</form>
